@page "/"
@using ChartJs.Blazor.PieChart


<PageTitle>Home</PageTitle>

<div class="container mt-4">
    <h3>Загрузка файлов</h3>
    
    <div class="mb-3">
        <label for="formFile" class="form-label">Выберите файл</label>
        <InputFile id="formFile" OnChange="HandleSelected" class="form-control" multiple/>
    </div>
    
    <button class="btn btn-primary" @onclick="UploadFiles" disabled="@(!files.Any())">
        @if (isSuccess)
        {
            <i class="bi bi-check-lg"></i>
        }
        Загрузить
    </button>
    
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-info mt-3">@message</div>
    }
</div>

@code {
    private List<IBrowserFile> files = new();
    private string? message;
    private HttpClient _client = new HttpClient();
    private bool isSuccess = false;
    
    private void HandleSelected(InputFileChangeEventArgs e)
    {
        files = e.GetMultipleFiles().ToList();
        message = $"{files.Count()} файлов выбрано";
    }

    private async Task UploadFiles()
    {
        isSuccess = false;
        if (files == null || files.Count == 0)
        {
            message = "Файлов нет";
            return;
        }

        var file = files.First();
        
        using var content = new MultipartFormDataContent();
        using var fileStream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10mb
        using var streamContent = new StreamContent(fileStream);
        content.Add(streamContent, "file", file.Name);

        var response = await _client.PostAsync("http://localhost:5186/upload-file", content);

        if (response.IsSuccessStatusCode)
        {
            message = "Файлы загружены";
            isSuccess = true;
        }
        else
        {
            message = "Ошибка загрузки";
        }
    }

}